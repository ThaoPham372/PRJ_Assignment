<?xml version="1.0" encoding="UTF-8"?>
<web-app version="6.0" xmlns="https://jakarta.ee/xml/ns/jakartaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="https://jakarta.ee/xml/ns/jakartaee https://jakarta.ee/xml/ns/jakartaee/web-app_6_0.xsd">
    <display-name>Gym Management System</display-name>
    <description>Comprehensive Gym Management Application</description>

    <!-- Servlet definitions -->
    <servlet>
        <servlet-name>HomeServlet</servlet-name>
        <servlet-class>controller.HomeServlet</servlet-class>
        <load-on-startup>1</load-on-startup>
    </servlet>
    
    <servlet-mapping>
        <servlet-name>HomeServlet</servlet-name>
        <url-pattern>/home</url-pattern>
    </servlet-mapping>
    
    <!-- Admin Dashboard Servlet -->
    <!-- Note: This servlet uses @WebServlet annotation, so this configuration is optional -->
    <!-- But included here for documentation purposes -->
    <servlet>
        <servlet-name>AdminDashboardServlet</servlet-name>
        <servlet-class>controller.AdminDashboardServlet</servlet-class>
        <load-on-startup>2</load-on-startup>
    </servlet>
    
    <!-- Welcome file list -->
    <welcome-file-list>
        <welcome-file>home.jsp</welcome-file>
        <welcome-file>index.jsp</welcome-file>
    </welcome-file-list>
    
    <!-- Session timeout (30 minutes) -->
    <session-config>
        <session-timeout>30</session-timeout>
    </session-config>
    
    <!-- Error pages -->
    <error-page>
        <error-code>403</error-code>
        <location>/views/error/403.jsp</location>
    </error-page>
    
    <error-page>
        <error-code>404</error-code>
        <location>/views/error/404.jsp</location>
    </error-page>
    
    <error-page>
        <error-code>500</error-code>
        <location>/views/error/500.jsp</location>
    </error-page>
    
    <!-- Character encoding filter -->
    <filter>
        <filter-name>CharacterEncodingFilter</filter-name>
        <filter-class>filter.CharacterEncodingFilter</filter-class>
        <init-param>
            <param-name>encoding</param-name>
            <param-value>UTF-8</param-value>
        </init-param>
    </filter>
    
    <filter-mapping>
        <filter-name>CharacterEncodingFilter</filter-name>
        <url-pattern>/*</url-pattern>
        <dispatcher>REQUEST</dispatcher>
        <dispatcher>FORWARD</dispatcher>
    </filter-mapping>
    
    <!-- Role-based Filters -->
    <!-- Note: Filters are also configured using @WebFilter annotations -->
    <!-- The following configuration ensures proper filter ordering -->
    
    <!-- Authentication Filter - Must run first for protected pages -->
    <filter>
        <filter-name>AuthenticationFilter</filter-name>
        <filter-class>filter.AuthenticationFilter</filter-class>
    </filter>
    
    <filter-mapping>
        <filter-name>AuthenticationFilter</filter-name>
        <url-pattern>/cart/*</url-pattern>
        <url-pattern>/checkout/*</url-pattern>
        <url-pattern>/order/*</url-pattern>
        <dispatcher>REQUEST</dispatcher>
    </filter-mapping>
    
    <!-- Admin Filter -->
    <filter>
        <filter-name>AdminFilter</filter-name>
        <filter-class>filter.AdminFilter</filter-class>
    </filter>
    
    <filter-mapping>
        <filter-name>AdminFilter</filter-name>
        <url-pattern>/admin/*</url-pattern>
        <dispatcher>REQUEST</dispatcher>
    </filter-mapping>
    
    <!-- Trainer Filter -->
    <filter>
        <filter-name>TrainerFilter</filter-name>
        <filter-class>filter.TrainerFilter</filter-class>
    </filter>
    
    <filter-mapping>
        <filter-name>TrainerFilter</filter-name>
        <url-pattern>/pt/*</url-pattern>
        <url-pattern>/trainer/*</url-pattern>
        <dispatcher>REQUEST</dispatcher>
    </filter-mapping>
    
    <!-- Member Filter -->
    <filter>
        <filter-name>MemberFilter</filter-name>
        <filter-class>filter.MemberFilter</filter-class>
    </filter>
    
    <filter-mapping>
        <filter-name>MemberFilter</filter-name>
        <url-pattern>/member/*</url-pattern>
        <dispatcher>REQUEST</dispatcher>
    </filter-mapping>
</web-app>
